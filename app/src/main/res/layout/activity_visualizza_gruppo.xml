<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_visualizza_gruppo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giovy.iumanji.VisualizzaGruppoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/nome_gruppo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Gruppo"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp"
            android:background="@color/colorButton"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/gruppo_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <TextView
        android:id="@+id/locali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locali"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/membri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membri gruppo"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/locali"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vai_membri_button"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:background="@color/colorButton"
        android:layout_alignBottom="@+id/membri"
        android:layout_alignStart="@+id/vai_locali_gruppo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vai_locali_gruppo"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:background="@color/colorButton"
        android:layout_above="@+id/membri"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/timer_sondaggio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer sondaggio"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/membri"
        android:layout_alignParentStart="true"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorButton"/>

    <Button
        android:id="@+id/visualizza_sondaggio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visualizza Sondaggio"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        />

    <Button
        android:id="@+id/crea_sondaggio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crea Sondaggio"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/visualizza_sondaggio_button"
        android:layout_alignParentStart="true" />


</RelativeLayout>