<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cronologia_sondaggi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giovy.iumanji.CronologiaSondaggi">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <TextView
        android:text="@string/cronologia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cronoloagia_sondaggi"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/colorButton" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                    <TextView
                        android:text="15/03/17"
                        android:layout_height="wrap_content"
                        android:id="@+id/cronologia_data"
                        android:layout_weight="0.14"
                        android:textSize="22sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_width="90dp" />

                    <TextView
                    android:text="12:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cronologia_ora"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_weight="0.12"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

                <TextView
                    android:text="Gusto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cronologia_locale"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_gravity="center" />
            </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:text="30/02/17"
                        android:layout_height="wrap_content"
                        android:id="@+id/cronologia_data"
                        android:layout_weight="0.08"
                        android:textSize="22sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_width="100dp" />

                    <TextView
                        android:text="12:23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cronologia_ora"
                        android:textSize="22sp"
                        android:textStyle="italic"
                        android:layout_weight="0.12"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>

                    <TextView
                        android:text="Bar Ghiani"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cronologia_locale"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textStyle="italic"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:layout_gravity="center" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:text="22/02/17"
                        android:layout_height="wrap_content"
                        android:id="@+id/cronologia_data"
                        android:layout_weight="0.13"
                        android:textSize="22sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_width="100dp" />

                    <TextView
                        android:text="12:55"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cronologia_ora"
                        android:textSize="22sp"
                        android:textStyle="italic"
                        android:layout_weight="0.12"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>

                    <TextView
                        android:text="Home peetza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cronologia_locale"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textStyle="italic"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:layout_gravity="center" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />


        </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
