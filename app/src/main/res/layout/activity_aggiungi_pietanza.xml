<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aggiungi_pietanza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giovy.iumanji.activity_aggiungi_pietanza">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <TextView
        android:text="@string/pietanza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aggiungi_pietanza"
        android:textAlignment="center"
        android:textSize="36dp"
        android:textColor="@color/colorButton" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nome_pietanza"
                android:layout_width="200dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/prezzo_pietanza"
                android:layout_weight="1.02"
                android:layout_width="70dp" />

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"
                android:id="@+id/imageButton5" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="277dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="Menu pizzetta"
                    android:layout_height="wrap_content"
                    android:id="@+id/nome_pietanza1"
                    android:textSize="20sp"
                    android:layout_width="200dp" />

                <TextView
                    android:text="4.00€"
                    android:layout_height="match_parent"
                    android:id="@+id/prezzo_pietanza1"
                    android:textSize="20sp"
                    android:layout_width="70dp"
                    android:layout_weight="1.05" />

                <ImageButton
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_dialog"
                    android:id="@+id/imageButton6" />
            </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:text="Pizza marcherita"
                        android:layout_height="wrap_content"
                        android:id="@+id/nome_pietanza2"
                        android:textSize="20sp"
                        android:layout_width="200dp" />

                    <TextView
                        android:text="3.50€"
                        android:layout_height="match_parent"
                        android:id="@+id/prezzo_pietanza2"
                        android:textSize="20sp"
                        android:layout_width="70dp"
                        android:layout_weight="1.05" />

                    <ImageButton
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/btn_dialog"
                        android:id="@+id/imageButton7" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:text="Menu kebab"
                        android:layout_height="wrap_content"
                        android:id="@+id/nome_pietanza3"
                        android:textSize="20sp"
                        android:layout_width="200dp" />

                    <TextView
                        android:text="6.00€"
                        android:layout_height="match_parent"
                        android:id="@+id/prezzo_pietanza3"
                        android:textSize="20sp"
                        android:layout_width="70dp"
                        android:layout_weight="1.05" />

                    <ImageButton
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/btn_dialog"
                        android:id="@+id/imageButton8" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:text="Menu handburger"
                        android:layout_height="wrap_content"
                        android:id="@+id/nome_pietanza4"
                        android:textSize="20sp"
                        android:layout_width="200dp" />

                    <TextView
                        android:text="6.50€"
                        android:layout_height="match_parent"
                        android:id="@+id/prezzo_pietanza4"
                        android:textSize="20sp"
                        android:layout_width="70dp"
                        android:layout_weight="1.05" />

                    <ImageButton
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/btn_dialog"
                        android:id="@+id/imageButton9" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="57dp" />

        <Button
            android:text="Home locali"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/button2"
            android:backgroundTint="@color/colorButton"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
