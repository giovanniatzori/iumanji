<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crea_gruppo2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giovy.iumanji.CreaGruppo2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_menu_page"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crea_gruppo_title"
            android:id="@+id/account_title"
            android:textColor="#009966"
            android:textAlignment="center"
            android:textSize="30dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="match_parent"
                app:srcCompat="@color/colorAccent"
                android:layout_below="@+id/main_menu_scroll"
                android:layout_alignParentStart="true"
                android:id="@+id/immagine_gruppo"
                android:layout_width="50dp" />
            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <EditText
                    android:id="@+id/nomeGruppo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome gruppo"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            app:srcCompat="@color/colorAccent"
                            android:layout_below="@+id/crea_menu_scroll"
                            android:layout_alignParentStart="true"
                            android:id="@+id/immagine_contatto1"
                            android:layout_height="32dp"
                            android:layout_width="32dp" />
                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Alessandro Tola"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/contatto1" />
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            app:srcCompat="@color/colorAccent"
                            android:layout_below="@+id/crea_menu_scroll"
                            android:layout_alignParentStart="true"
                            android:id="@+id/immagine_contatto2"
                            android:layout_height="32dp"
                            android:layout_width="32dp" />
                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Giovanni Atzori"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/contatto2" />
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            app:srcCompat="@color/colorAccent"
                            android:layout_below="@+id/crea_menu_scroll"
                            android:layout_alignParentStart="true"
                            android:id="@+id/immagine_contatto3"
                            android:layout_height="32dp"
                            android:layout_width="32dp" />
                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Martina Senis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/contatto3" />
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            app:srcCompat="@color/colorAccent"
                            android:layout_below="@+id/crea_menu_scroll"
                            android:layout_alignParentStart="true"
                            android:id="@+id/immagine_contatto4"
                            android:layout_height="32dp"
                            android:layout_width="32dp" />
                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Sara Scardigli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/contatto4" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/crea_gruppo2_button"
            android:background="@color/colorButton"
            android:text="Crea"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crea_gruppo_annulla"
            android:id="@+id/annullaCreaGruppo"
            />
    </LinearLayout>

</RelativeLayout>
