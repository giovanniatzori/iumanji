<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_riepilogo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giovy.iumanji.RiepilogoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/listaBob2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costo Totale: 23.45 €"
            android:textColor="#FF0000"
            android:textAlignment="center"
            android:textSize="24dp"
            android:id="@+id/somma_ordine"
            android:textStyle="normal|bold" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:background="@drawable/altro_rutton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:text="torna alla home"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:id="@+id/torna_home_button"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Riepilogo ordine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RiepilogoTitle"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/orange" />

        <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NomeLocaleRiepilogo"
            tools:text="Home Peezza"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Q.tà"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Prezzo"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pietanza"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"/>

        </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/nome_pietanza_listview">
            </ListView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

</RelativeLayout>
