<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_riepilogo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giovy.iumanji.RiepilogoActivity">

    <TextView
        android:text="Riepilogo ordine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RiepilogoTitle"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorButton" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Space
        android:layout_width="match_parent"
        android:layout_height="55dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NomeLocaleRiepilogo"
            tools:text="Home Peezza"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/blue" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/nome_pietanza_listview">
            </ListView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costo Totale: 23.45 â‚¬"
            android:textColor="#FF0000"
            android:textAlignment="center"
            android:textSize="24dp"
            android:id="@+id/somma_ordine"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />



<Button
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorButton"
    android:text="torna alla home"
    android:textColor="@color/white"
    android:textSize="24dp"
    android:id="@+id/torna_home_button"
    />
    </LinearLayout>
</RelativeLayout>
